<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


	<!-- 问答系统 管理风格-->
	<package name="draw-style" extends="struts-default">
		<action name="admin_draw_style_*" method="{1}"
			class="com.lerx.style.draw.service.DrawStyleAction">
			<result name="success">/${getText("lerx.default.admin.folder")}/admin_draw_style_list.jsp</result>
			<result name="input">/${getText("lerx.default.admin.folder")}/admin_draw_style_list.jsp</result>
		</action>
		<action name="admin_draw_style_getMetaDataByID" method="findMetaData"
			class="com.lerx.sys.service.TableMetaDataAction">
			<result name="success">/${getText("lerx.default.admin.folder")}/admin_draw_style_more.jsp</result>
		</action>
		<action name="admin_draw_style_copyToFile" method="saveToFile" class="com.lerx.style.draw.service.DrawStyleAction">
		</action>
		<action name="admin_draw_style_importFromFile" method="importFromFile" class="com.lerx.style.draw.service.DrawStyleAction">
			<result name="success">/${getText("lerx.default.admin.folder")}/admin_draw_style_list.jsp</result>
		</action>
		<action name="admin_draw_style_var_find" method="find"
			class="com.lerx.sys.service.StyleSqlAction">
			<result name="success">/${getText("lerx.default.admin.folder")}/admin_draw_style_inf_details_pop.jsp</result>
		</action>
		<action name="admin_draw_style_var_modify" method="modify"

			class="com.lerx.sys.service.StyleSqlAction">
			<result name="success" type="redirect">/${getText("lerx.default.admin.folder")}/admin_style_inf_details_pop_ok.jsp
			</result>
		</action>
	</package>

</struts>
